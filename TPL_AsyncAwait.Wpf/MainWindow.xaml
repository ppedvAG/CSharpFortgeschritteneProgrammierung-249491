<Window x:Class="TPL_AsyncAwait.Wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TPL_AsyncAwait.Wpf"
        mc:Ignorable="d"
        Title="MainWindow" Height="800" Width="450">
    <StackPanel Margin="10">
        <Button Click="Start">Start (Sync Blocking UI)</Button>
        <Button Click="StartTaskRun">Start Task Run</Button>
        <Button Click="StartAsyncAwait">Start Async Await</Button>
        <Button Click="CancelTask">Cancel Task</Button>
        <Button Click="StartRequest">Start Request</Button>
        <Button Click="StartLegacyCode">Start Legacy Code</Button>

        <ScrollViewer Height="600" MouseDoubleClick="Clear">
            <TextBlock Name="Output" FontSize="18" />
        </ScrollViewer>
    </StackPanel>
</Window>
